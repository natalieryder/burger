<h1>Eat-Da-Burger!</h1>

<div class="row">
	<div class="col-6">
		<ul>
		  {{#each burgers}}
		 	{{#unless devoured}}
		      <li>{{burger_name}}
		      	<button class="btn devour-btn" data-id="{{id}}">Devour It!</button></li>
		    {{/unless}}
		  {{/each}}
		</ul>
	</div>

	<div class="col-6">
		<ul>
		  {{#each burgers}}
		  	{{#if devoured}}
		      <li>{{burger_name}}
		      	<button class="btn delete-btn" data-id="{{id}}">Delete It!</button></li>
		  	{{/if}}
		  {{/each}}
		</ul>
	</div>
</div>




<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>